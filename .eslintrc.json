{
    "env": {
        "browser": true,
        "es2021": true,
        "commonjs": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 15,
        "sourceType": "module"
    },
    "globals": {
        "Cypress": "readonly",
        "cy": "readonly",
        "context": "readonly",
        "expect": "readonly",
        "describe": "readonly",
        "it": "readonly"
    },
    "rules": {
        "indent": ["error", 4], // Use 4 espaços para indentação
        "quotes": ["error", "single"], // Use aspas simples
        "semi": ["error", "always"], // Sempre use ponto e vírgula
        "no-console": "warn", // Avisar sobre console.log, mas não proibir
        "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }], // Avisar sobre variáveis não utilizadas, mas ignorar variáveis começando com _
        "eol-last": ["error", "always"] // Sempre tenha uma nova linha no final do arquivo
    }
}
